  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "node dist/server.js",
    "start": "npm run serve",
    "dev": "concurrently \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\" ",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "watch-sass": "node-sass -w src/public/css/style.scss dist/public/css/style.css",
    "build": "npm run build-sass && npm run build-ts",
    "build-ts": "tsc",
    "build-sass": "node-sass src/public/css/style.scss src/public/css/style.css",
    "build-webpack": "webpack --config ./webpack.config.js && npm run build-sass && node dist/bundle.js"
  },
